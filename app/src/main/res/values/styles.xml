<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/country_black</item>
        <item name="colorSurface">@color/country_gray_50</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/country_white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash</item>
    </style>

    <style name="TextAppearance.Country.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>