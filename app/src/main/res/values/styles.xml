<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Country" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnSurface">@color/country_black</item>
        <item name="colorSurface">@color/country_gray_50</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/country_white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.Country" />

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash</item>
    </style>

    <style name="TextAppearance.Country.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Country.Listing.Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Country.Detail.Body.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Country.Toolbar.Light.Text" parent="TextAppearance.MaterialComponents.Headline6"/>

    <style name="Theme.Country.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>